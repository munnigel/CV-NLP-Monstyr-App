<div class="show-content">

  <h2>Photo detail</h2>

  <div class="card" style="width: 30rem;">
    <div class="card-body">
      <!-- <img class="card-img-top" src="<%= image_url @photo %>" alt="Card image cap"> -->
      <%= image_tag(@photo.image, size: "300") %>
      <h5 class="card-title"><%= @photo.caption %></h5>
      <%= link_to 'Edit', edit_photo_path(@photo), class:"btn btn-light" %>
      <%= link_to 'Back', photos_path, class:"btn btn-light" %>
      <%= button_to "Destroy this post", @photo, method: :delete, class:"btn btn-danger" %>
    </div>
  </div>
</div>
