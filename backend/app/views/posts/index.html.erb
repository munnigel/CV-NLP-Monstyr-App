<h1>Listing Posts</h1>

<table>
  <thead>
    <tr>
      <!-- <th>Img url</th> -->
      <th>Title</th>
      <th>Description</th>
      <!-- <th>Validity start</th> -->
      <!-- <th>Validity end</th> -->
      <!-- <th>Category</th> -->
      <!-- <th>Tag</th> -->
      <!-- <th>Ocr img url</th> -->
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @posts.each do |post| %>
      <tr>
        <td><%= post.title %></td>
        <td><%= post.description %></td>
        <td><%= link_to 'Show', post %></td>
        <td><%= link_to 'Edit', edit_post_path(post) %></td>
        <td><%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

